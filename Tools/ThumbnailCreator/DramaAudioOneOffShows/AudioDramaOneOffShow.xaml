<Window x:Class="ThumbnailCreator.DramaAudioEpisodes.AudioDramaOneOffShow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"

        xmlns:WPFDrawing="clr-namespace:WPF.Drawing;assembly=WPF"
        mc:Ignorable="d"
        Title="MainWindow" Background="White"
        WindowStyle="None"
        ResizeMode="NoResize"
        AllowsTransparency="False"
        WindowStartupLocation="CenterScreen"
        Width="1920"
        Height="1080">
    <Grid>
        <Grid.Background>
            <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                <GradientStop Color="#FF434343" Offset="0" />
                <GradientStop Color="#FF122335" Offset="1" />
            </LinearGradientBrush>
        </Grid.Background>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="32" />
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="32" />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="300" />
            <RowDefinition Height="*" />
            <RowDefinition Height="32" />
        </Grid.RowDefinitions>

        <StackPanel Grid.Row="0" Grid.Column="1">
            <WPFDrawing:OutlinedText
                x:Name="ShowTitleTag" Fill="White" FontSize="100" Font="Exo 2"
                Bold="True" Stroke="#FF000000" StrokeThickness="4" Text="{Binding ShowTitle}"
                HorizontalAlignment="Center" VerticalAlignment="Center" Height="Auto" Width="Auto" />
            <WPFDrawing:OutlinedText
                x:Name="ShowTitleLine2Tag" Fill="White" FontSize="80" Font="Exo 2"
                Bold="True" Stroke="#FF000000" StrokeThickness="4" Text="{Binding ShowTitleLine2}"
                HorizontalAlignment="Center" VerticalAlignment="Center" Height="Auto" Width="Auto" />
        </StackPanel>
        <StackPanel Grid.Row="1" Grid.Column="1">
            <TextBlock x:Name="ShowDescirption" FontSize="50" TextWrapping="Wrap"
                   Text="{Binding ShowDescription}" Height="470" Width="1580"
                   Foreground="#FFFFFFFF" FontFamily="Exo 2" Margin="0,186,0,0" Grid.RowSpan="2" />
        </StackPanel>
    </Grid>
</Window>