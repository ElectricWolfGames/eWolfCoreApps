<Window x:Class="ThumbnailCreator.DramaAudioEpisodes.AudioDramaOneOffThumbnail"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"

        xmlns:WPFDrawing="clr-namespace:WPF.Drawing;assembly=WPF"
        mc:Ignorable="d"
        Title="MainWindow" Background="White"
        WindowStyle="None"
        ResizeMode="NoResize"
        AllowsTransparency="False"
        WindowStartupLocation="CenterScreen"
        Width="1920"
        Height="1080">
    <Grid>
        <Grid.Background>
            <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                <GradientStop Color="#FF434343" Offset="0" />
                <GradientStop Color="#FF122335" Offset="1" />
            </LinearGradientBrush>
        </Grid.Background>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="64" />
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="32" />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="32" />
            <RowDefinition Height="300" />
            <RowDefinition Height="*" />
            <RowDefinition Height="32" />
        </Grid.RowDefinitions>

        <StackPanel Grid.Row="1" Grid.Column="1">
            <WPFDrawing:OutlinedText
                x:Name="ShowTitleTag" Fill="White" FontSize="100" Font="Exo 2"
                Bold="True" Stroke="#FF000000" StrokeThickness="4" Text="{Binding ShowTitle}"
                HorizontalAlignment="Center" VerticalAlignment="Center" Height="Auto" Width="Auto" />
            <WPFDrawing:OutlinedText
                x:Name="ShowTitleLine2Tag" Fill="Yellow" FontSize="80" Font="Exo 2"
                Bold="True" Stroke="#FF000000" StrokeThickness="4" Text="{Binding ShowTitleLine2}"
                HorizontalAlignment="Center" VerticalAlignment="Center" Height="Auto" Width="Auto" />
        </StackPanel>
        <StackPanel Grid.Row="2" Grid.Column="1">
            <Border Height="20" />
            <WPFDrawing:OutlinedText Grid.Row="0" Grid.Column="1"
                Fill="Wheat" FontSize="80" Font="Exo 2"
                Bold="True" Stroke="#FF000000" StrokeThickness="4" Text="Full Story"
                HorizontalAlignment="Center" VerticalAlignment="Center" Height="Auto" Width="Auto" />

            <Border Height="100" />
            <WPFDrawing:OutlinedText Grid.Row="0" Grid.Column="1"
                Fill="Yellow" FontSize="100" Font="Exo 2"
                Bold="True" Stroke="#FF000000" StrokeThickness="4" Text="{Binding StoryType}"
                HorizontalAlignment="Center" VerticalAlignment="Center" Height="Auto" Width="Auto" />
            <WPFDrawing:OutlinedText Grid.Row="0" Grid.Column="1"
                Fill="Yellow" FontSize="100" Font="Exo 2"
                Bold="True" Stroke="#FF000000" StrokeThickness="4" Text="Audio Drama"
                HorizontalAlignment="Center" VerticalAlignment="Center" Height="Auto" Width="Auto" />
        </StackPanel>
    </Grid>
</Window>