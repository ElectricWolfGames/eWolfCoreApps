<Window x:Class="ThumbnailCreator.AudioEpisodesShow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ThumbnailCreator"
        xmlns:WPFDrawing="clr-namespace:WPF.Drawing;assembly=WPF"
        mc:Ignorable="d"
        Title="MainWindow" Background="White"
        WindowStyle="None"
        ResizeMode="NoResize"
        AllowsTransparency="False"
        WindowStartupLocation="CenterScreen"
        Width="1920"
        Height="1080">
    <Grid>
        <Grid.Background>
            <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                <GradientStop Color="#FF434343" Offset="0" />
                <GradientStop Color="#FF122335" Offset="1" />
            </LinearGradientBrush>
        </Grid.Background>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="32" />
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="32" />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="220" />
            <RowDefinition Height="*" />
            <RowDefinition Height="32" />
        </Grid.RowDefinitions>

        <WPFDrawing:OutlinedText Grid.Row="0" Grid.Column="1"
                x:Name="ShowTitleTag" Fill="White" FontSize="92" Font="Exo 2"
                Bold="True" Stroke="#FF000000" StrokeThickness="4" Text="{Binding ShowTitle}"
                HorizontalAlignment="Center" VerticalAlignment="Center" Height="Auto" Width="Auto" />

        <TextBlock x:Name="EpisodeTitle" HorizontalAlignment="Center" FontSize="48" TextWrapping="Wrap"
                   Text="TextBlock" VerticalAlignment="Top" Height="234" Width="962"
                   Foreground="#FFFFFFFF" FontFamily="Bowlby One SC" Margin="0,186,0,0" Grid.RowSpan="2" />
        <TextBlock Grid.Row="1" x:Name="EpisodeDescription" HorizontalAlignment="Center" FontSize="32" Margin="0,125,0,0" TextWrapping="Wrap" Text="TextBlock" VerticalAlignment="Top" Height="446" Width="878" Foreground="White" />
        <TextBlock Grid.Row="1" Grid.Column="0" x:Name="ShowDescription" HorizontalAlignment="Left" FontSize="28" Margin="51,571,0,0" TextWrapping="Wrap" Text="TextBlock" VerticalAlignment="Top" Height="239" Width="902" Foreground="White" Grid.RowSpan="2" />
    </Grid>
</Window>