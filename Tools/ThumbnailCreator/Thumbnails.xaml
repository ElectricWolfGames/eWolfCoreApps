<Window x:Class="ThumbnailCreator.Thumbnails"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ThumbnailCreator"
        xmlns:WPFDrawing="clr-namespace:WPF.Drawing;assembly=WPF"
        mc:Ignorable="d"
        Title="Thumbnails"
        Background="White"
        WindowStyle="None"
        ResizeMode="NoResize"
        AllowsTransparency="False"
        WindowStartupLocation="CenterScreen"
        Width="1920"
        Height="1080">
    <Window.Resources>
        <BooleanToVisibilityConverter x:Key="BoolToVisConverter" />
    </Window.Resources>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="220" />
            <RowDefinition Height="*" />
            <RowDefinition Height="100" />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="900" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>
        <Rectangle Grid.Row="0" Grid.Column="0"
                   Grid.ColumnSpan="2" Grid.RowSpan="3"
                   Width="1920"
                   Height="1112"
                   Fill="#FF222222"
                   Stroke="#88112222"
                   StrokeThickness="2"
                   HorizontalAlignment="Center"
                   VerticalAlignment="Center" />
        <Image x:Name="ImageTag" Grid.Row="1" Grid.Column="0"
               Source="Images/Rudys Rarer Rcords.jpeg" OpacityMask="#FF000000" />

        <WPFDrawing:OutlinedText Grid.Row="0" Grid.Column="0"
                Grid.ColumnSpan="2" x:Name="ShowTitle" Fill="{Binding MyColor}" FontSize="100"
                Bold="True" Text="Demo Text My Title" Margin="0,20,0,0"
                HorizontalAlignment="Center" VerticalAlignment="Top" Width="Auto" Height="231"
                Stroke="Black" StrokeThickness="6" Font="Russo One" />

        <Image Grid.Row="1" Grid.Column="1" Visibility="{Binding IsComedyShow, Converter={StaticResource BoolToVisConverter}}"
            Source="Art/Face_With_Headphones-Small.png" Margin="455,0,0,388" />
        <Image Grid.Row="1" Grid.Column="1" Visibility="{Binding IsSciFiShow, Converter={StaticResource BoolToVisConverter}}"
            Source="Art/sci fi.png" Margin="455,0,0,388" />

        <WPFDrawing:OutlinedText Grid.Row="1" Grid.Column="1" x:Name="ShowType"
                    Fill="Yellow" FontSize="94" Bold="True" Stroke="Black" StrokeThickness="3" Text="RADIO"
                    Font="Lemon" Margin="122,79,0,0"
            HorizontalAlignment="Left" VerticalAlignment="Top" Width="396" Height="231" />
        <WPFDrawing:OutlinedText Grid.Row="1" Grid.Column="1" x:Name="ShowType2"
                    Fill="Yellow" FontSize="94" Bold="True" Stroke="Black" StrokeThickness="3" Text="COMEDY"
                    Font="Lemon" Margin="60,184,0,0"
            HorizontalAlignment="Left" VerticalAlignment="Top" Width="Auto" Height="231" />

        <WPFDrawing:OutlinedText Grid.Row="1" x:Name="SeriesCountTag" HorizontalAlignment="Center" Fill="White" FontSize="80"
            Bold="True" Stroke="Black" StrokeThickness="4" Text="Series 1" Width="Auto" Margin="898,420,10,197" Grid.ColumnSpan="2" />

        <WPFDrawing:OutlinedText Grid.Row="1" x:Name="EpisodeCount" Fill="Yellow" FontSize="80"
            Bold="True" Stroke="Black" StrokeThickness="4" Text="4 Episodes" Width="Auto" Margin="283,562,96,10" Grid.Column="1" />
        <Image Grid.Row="1" Grid.Column="1" Visibility="{Binding IsSciFiShow, Converter={StaticResource BoolToVisConverter}}"
            Source="/Art/sci fi.png" Margin="455,0,0,388" />
        <Grid Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="2">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="256" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="256" />
            </Grid.ColumnDefinitions>
            <Border Grid.Row="0" Grid.Column="2" Name="IndexCounterTag"
                CornerRadius="8"
                Background="DarkCyan"
                BorderBrush="White"
                BorderThickness="1"
                Padding="8"
                HorizontalAlignment="Center"
                VerticalAlignment="Center">

                <StackPanel Orientation="Horizontal">
                    <TextBlock FontSize="48" FontFamily="Bahnschrift"
                        Text="{Binding IndexCurrent}"
                        FontWeight="Bold" />
                    <TextBlock FontSize="48" FontFamily="Bahnschrift"
                        Text=" | "
                        Margin="4,0" FontWeight="Bold" FontStyle="Italic" />
                    <TextBlock FontSize="48" FontFamily="Bahnschrift"
                        Text="{Binding IndexTotal}"
                        Opacity="0.7" FontWeight="Bold" />
                </StackPanel>
            </Border>
        </Grid>
    </Grid>
</Window>