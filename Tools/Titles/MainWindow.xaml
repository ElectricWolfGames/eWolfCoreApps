<Window x:Class="Titles.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Titles"
        xmlns:localTitles="clr-namespace:Titles.WPF"
        mc:Ignorable="d"
        Title="MainWindow" Height="800" Width="1500">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="300" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>

        <TextBox Grid.Column="0" Margin="16,88,6,286" Text="{Binding TitleLabel, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                        Width="377" TextWrapping="Wrap" />
        <Label Content="Title" HorizontalAlignment="Left" Margin="10,63,0,0" VerticalAlignment="Top" RenderTransformOrigin="0.149,0.271" Width="49" Height="25" />

        <localTitles:OutlinedText Grid.Row="0" Grid.Column="1"
                x:Name="ShowTitle" Fill="{Binding FillColor}" Font="Lemon" FontSize="60"
                Bold="True" Stroke="Black" StrokeThickness="3" Text="{Binding TitleLabel}" Margin="0,88,0,0"
                HorizontalAlignment="Center" VerticalAlignment="Top" Width="1062" Height="279" />
    </Grid>
</Window>