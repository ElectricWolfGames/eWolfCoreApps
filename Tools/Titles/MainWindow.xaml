<Window x:Class="Titles.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Titles"
        xmlns:localTitles="clr-namespace:Titles.WPF"
        mc:Ignorable="d"
        Title="MainWindow" Height="900" Width="2900" Background="Transparent">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="250" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>

        <GroupBox Header="Data" Name="DataFieldTags" Grid.Column="0">
            <Grid Background="LightGray">
                <TextBox Margin="16,88,10,433" Text="{Binding TitleLabel, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" TextWrapping="Wrap" />
                <Label Content="Title" HorizontalAlignment="Left" Margin="10,63,0,0" VerticalAlignment="Top" RenderTransformOrigin="0.149,0.271" Width="49" Height="25" />
                <Button Content="Save Image" HorizontalAlignment="Left" Margin="42,354,0,0" VerticalAlignment="Top" Click="Button_Click" />
            </Grid>
        </GroupBox>
        <localTitles:OutlinedText Grid.Row="0" Grid.Column="1"
                x:Name="ShowTitle" Fill="{Binding FillColor}" Font="Lemon" FontSize="90"
                Bold="True" Stroke="Black" StrokeThickness="8" Text="{Binding TitleLabel}" Margin="5"
                HorizontalAlignment="Center" VerticalAlignment="Top" />
    </Grid>
</Window>