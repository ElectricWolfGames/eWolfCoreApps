<UserControl x:Class="eWolfSounds_UI.UserControls.SoundLibraryItem"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:eWolfSounds_UI.UserControls"
             mc:Ignorable="d"
             d:DesignHeight="40" d:DesignWidth="790">
    <Grid>
        <TextBox x:Name="_labelName" Text="{Binding Title,
                        Mode=TwoWay,
                        UpdateSourceTrigger=PropertyChanged}" HorizontalAlignment="Left" Margin="10,2,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="718" />
        <Button Content="Play" HorizontalAlignment="Left" Margin="750,0,0,0" VerticalAlignment="Top" Click="Button_Click" />
        <Button Content="X" HorizontalAlignment="Left" Margin="750,20,0,0" VerticalAlignment="Top" />
    </Grid>
</UserControl>